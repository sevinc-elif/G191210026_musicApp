@model HomePageViewModel

<div class="card mx-auto" style="width: 500px; margin-left: 300px; border: 2px solid blue; padding:7px;border-radius:10px">
    <div class="card-header">
        <h2 style="font-size:22px;color:black;text-align:center">MÜZİK UYGULAMASI GİRİŞ</h2>
    </div>
    <div class="card-body">
        <form asp-controller="Home" asp-action="Index" method="POST">
            <div asp-validation-summary="All"></div>
            <div class="form-group">
                <label asp-for="@Model.Email">Eposta</label>
                <input asp-for="Email" class="form-control">
            </div>
            <div class="form-group">
                <div class="password">
                    <label asp-for="@Model.Password">Şifre</label>
                    <input type="password" asp-for="Password" class="form-control">
                </div>
            </div>
            <input type="submit" value="Giriş Yap" class="btn btn-primary btn-block">
        </form>
    </div>
</div>